{
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "rules": {
    "arrow-parens": [true, "ban-single-arg-parens"],
    "interface-over-type-literal": false,
    "jsx-no-multiline-js": false,
    "max-classes-per-file": false,
    "member-access": false,
    "object-curly-spacing": true,
    "quotemark": false
  },
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.ts",
      "node_modules/**/*.tsx"
    ]
  },
  "rulesDirectory": [
    "node_modules/tslint-eslint-rules/dist/rules"
  ]
}
